<h1 id="the-heading">Course schedules</h1>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">JSON course data</div>
            <div class="panel-body">{{ asJSON schedules }}</div>
        </div>
        <div class="list-group">
            <span class="list-group-item active">Courses and links to schedules</span>
            {{#schedules}}
                <a class="list-group-item" href="{{url}}" target="_blank">{{list}}</a>
            {{/schedules}}
            </div>
        </div>
        {{#schedules}}
        <div class="panel col-sm-12 embed-responsive embed-responsive-4by3">
          <iframe class="embed-responsive-item" src="{{url}}"></iframe>
        </div>
        {{/schedules}}
    </div>
</div>

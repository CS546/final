<style>
div.buttons {
    margin: 5px 5px 5px 5px;
}
</style>
<div class="row">
    <div class="col-sm-12 center-block">
        <div class="col-sm-12 profile-banner space-bottom">
            <div class="row space-bottom">
                <h1 class="text-center">{{ user.name }}</h1>
            </div>

            <div class="row">
                <div class="buttons">
                    <a href="/account/changePassword">
                        <button class="btn btn-default center-block"><span class="fa fa-shield"></span> Change Password</button>
                    </a>
                </div>
                <div class="buttons">
                    <a href="/account/updateAccount">
                        <button class="btn btn-default center-block"><span class="fa fa-pencil"></span> Edit Profile</button>
                    </a>
                </div>
                <div class="buttons">
                    <a href="/">
                    <button class="btn btn-default center-block">Sign Out</button>
                    </a>
                </div>
            </div>
        </div>

        {{#if user.cwid}}
            <div class="col-xs-12 space-bottom">
                <div class="row">
                    <label class="col-sm-6 text-right" for="CWID">Campus Wide ID</label>
                    <div id="CWID" class="col-sm-6 text-left">{{ user.cwid }}</div>
                </div>
                <div class="row">
                    <label class="col-sm-6 text-right" for="Major">Major</label>
                    <div id="Major" class="col-sm-6 text-left">{{ user.major }}</div>
                </div>
                <div class="row">
                    <label class="col-sm-6 text-right" for="SemesterOfEntry">Semester of Enrollment</label>
                    <div id="SemesterOfEntry" class="col-sm-6 text-left">{{ user.semester_of_entry }}</div>
                </div>
                <div class="row">
                    <label class="col-sm-6 text-right" for="GraduationDate">Graduation Date</label>
                    <div id="GraduationDate" class="col-sm-6 text-left">{{ user.d_o_g }}</div>
                </div>
                <div class="row">
                    <label class="col-sm-6 text-right" for="CWID">Cummulative GPA</label>
                    <div id="CWID" class="col-sm-6 text-left">{{ user.gpa }}</div>
                </div>
                <div class="row">
                    <label class="col-sm-6 text-right" for="CWID">Completed Credits</label>
                    <div id="CWID" class="col-sm-6 text-left">{{ user.current_credit_total }}</div>
                </div>
            </div>
            <form method="POST">
                <h2 class="text-center space-bottom">Saved Schedules</h2>
                {{#if user.schedules.length}}
                    <select class="form-control" value="{{ selectedSchedule }}" name="selectedSchedule" id="selectedSchedule">
                        {{#user.schedules}}
                            <option value="{{ name }}">{{ name }}</option>
                        {{/user.schedules}}
                    </select>
                    {{#if selectedSchedule}}
                        <div class="panel col-sm-12 embed-responsive embed-responsive-4by3">
                            <iframe class="embed-responsive-item" src="{{ schedule.url }}"></iframe>
                        </div>
                    {{else}}
                        <div class="text-muted text-center center-block">Select a schedule to view</div>
                    {{/if}}
                {{else}}
                    <div class="text-muted text-center">No saves schedules to show.<br>How about adding a schedule?</div>
                {{/if}}
            </form>
        {{else}}
            <div class="text-muted text-center">No Content to Show<br>Update Your Profile!</div>
        {{/if}}
    </div>
</div>
